{
  "compilerOptions": {
    "sourceMap": true,
    "target": "esnext",
    "jsx": "react",
    "mode": "preserve",
    "module": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "build",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "config": ["config/dev.js", "config/prod.js"],
      "images": ["src/assets/images/"],
      "stores": ["src/app/stores"],
      "apiCalls": ["src/services/apiCalls.ts"],
      "models": ["src/models"],
      "forms": ["src/forms"],
    }
  },
  "exclude": [
    "./dist",
    "build",
    "node_modules"
  ]
} 
